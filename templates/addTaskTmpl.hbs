<div class="list-group-item">
    <form>
        <div class="form-group">
            <input placeholder="Title" class="form-control" type="text" id="task-title-input" name="title" value="{{title}}" />
        </div>
        <div class="form-group">
            <input placeholder="Description" id="task-description-input" name="description" class="form-control" value="{{description}}" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" id="task-submit" value="submit" />
        </div>
    </form>
</div>