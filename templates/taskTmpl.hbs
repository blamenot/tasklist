{{#if edit}}
    <form >
        <div class="form-group">
            <input class="form-control" type="text" id="task-title-edit" name="title" value="{{title}}" />
        </div>
        <div class="form-group">
            <input id="task-description-edit" name="description" class="form-control" value="{{description}}" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" id="task-edit-submit" value="submit" />
        </div>
    </form>
{{else}}
    <h3>{{title}}</h3>
    <p>{{description}}</p>
    <div class="clearfix">
        <div class="checkbox pull-left">
            <label><input type="checkbox" {{completed}}  value="">Completed?</label>
        </div>
        <button class="btn btn-sm btn-danger pull-right">Remove</button>
    </div>
{{/if}}